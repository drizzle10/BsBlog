<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.project.BsBlog.mapper.AdminMapper">
	
	<!-- 회원 조회 -->
	<select id="selectMember" resultType="com.project.BsBlog.vo.MemberVO">
		SELECT 
			   * 
		  FROM 
		  	   member
				<if test="!keyword.equals('')">
					<choose>
						<when test="searchType.equals('name')">
							WHERE 
								  member_name 
							 LIKE 
							 	  '%${keyword}%' 
						</when>
						<when test="searchType.equals('id')">
							WHERE 
								  member_id 
							 LIKE 
							 	  '%${keyword}%' 
						</when>
					</choose>
				</if>
				ORDER BY
						 member_idx ASC
				   LIMIT 
				   		 #{startRow}, #{listLimit}
	</select>
	
	<!-- 회원수 조회 -->
	<select id="selectMemberCount" resultType="integer">
		SELECT 
			   COUNT(*) 
		  FROM 
		  	   member
			<if test="!keyword.equals('')">
				<choose>
					<when test="searchType.equals('name')">
						WHERE 
							  member_name 
						 LIKE 
						 	  '%${keyword}%' 
					</when>
					<when test="searchType.equals('id')">
						WHERE 
							  member_id 
						 LIKE 
						 	  '%${keyword}%' 
					</when>
				</choose>
			</if>
	</select>
	
	<!-- 멤버 상세 조회 -->
	<select id="selectMemberDetail" resultType="com.project.BsBlog.vo.MemberVO">
		SELECT
				*
		  FROM
		  		member
		 WHERE
		 		member_idx = #{member_idx}			
	</select>
	
	<!-- 신고 전체 목록 조회 -->
	<select id="selectReport" resultType="com.project.BsBlog.vo.ReportVO">
		SELECT 
			   * 
		  FROM 
		  	   report
				<if test="!keyword.equals('')">
					<choose>
						<when test="searchType.equals('id')">
							WHERE 
								  report_id 
							 LIKE 
							 	  '%${keyword}%' 
						</when>
						<when test="searchType.equals('content')">
							WHERE 
								  report_content 
							 LIKE 
							 	  '%${keyword}%' 
						</when>
					</choose>
				</if>
				ORDER BY
						 report_date DESC
				   LIMIT 
				   		 #{startRow}, #{listLimit}
	</select>
	
